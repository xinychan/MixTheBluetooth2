<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/activity_servers"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/connect_servers_fragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"></FrameLayout>

    <RadioGroup
        android:id="@+id/servers_bottom_group"
        android:layout_width="match_parent"
        android:background="@color/title_bar_bg_day"
        android:layout_height="@dimen/tab_height"
        android:gravity="bottom"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/servers_message_group"
            style="@style/home_bottom_tab_style"
            android:checked="true"
            android:drawableTop="@drawable/ic_tab_msg"
            android:text="消息" />

        <RadioButton
            android:id="@+id/servers_custom_group"
            style="@style/home_bottom_tab_style"
            android:drawableTop="@drawable/ic_tab_custom"
            android:text="自定义" />

    </RadioGroup>

</LinearLayout>
