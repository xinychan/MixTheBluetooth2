<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="horizontal"
    android:weightSum="10">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="7.2"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/windows_rim"
        android:gravity="center_horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:paddingTop="15dp"
                android:paddingBottom="6dp"
                android:text="按钮设置" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#d1d2d6" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="10"
                android:paddingTop="18dp"
                android:paddingBottom="10dp"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:paddingRight="6dp"
                    android:text="名称: " />

                <EditText
                    android:id="@+id/button_name"
                    android:layout_width="0dp"
                    android:layout_weight="7"
                    android:padding="4dp"
                    android:background="@drawable/windows_rim"
                    android:layout_height="wrap_content"
                    android:textSize="18sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="10"
                android:paddingBottom="15dp"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="6dp"
                    android:text="内容: "
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/button_data"
                    android:layout_width="0dp"
                    android:layout_weight="7"
                    android:padding="4dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/windows_rim"
                    android:textSize="18sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="10">

                <TextView
                    android:id="@+id/add_button_back"
                    android:layout_width="0dp"
                    android:layout_weight="5"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:gravity="center"
                    android:paddingTop="15dp"
                    android:background="@drawable/button_rim"
                    android:paddingBottom="10dp"
                    android:textColor="#4DB8DC"
                    android:text="取消" />

                <TextView
                    android:id="@+id/add_button_affirm"
                    android:layout_width="0dp"
                    android:layout_weight="5"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:gravity="center"
                    android:paddingTop="15dp"
                    android:background="@drawable/button_rim"
                    android:paddingBottom="10dp"
                    android:textColor="#79D0A5"
                    android:text="确定" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>
